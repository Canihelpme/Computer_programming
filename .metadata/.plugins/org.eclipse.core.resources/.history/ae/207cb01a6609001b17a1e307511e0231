package java_lab_04;
import java.util.Scanner;

public class Exercise_06_11 {
	public static void main(String[] args)
	{
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the amount of sales: ");
		double salesAmount = input.nextDouble();
		System.out.printf("%s" , computeCommission(salesAmount));
	}
	
	public static double computeCommission(double salesAmount)
	{
		double origin_salesAmount = salesAmount;
		double commission = 0;
		double balance = 0;
		if(salesAmount  > 10000)
		{
			commission += (salesAmount - 10000) * 0.12;
			commission += 5000 * 0.10;
			commission += 5000 * 0.08;
		}
		else if(salesAmount > 5000 && salesAmount < 10000)
		{
			commission += (salesAmount - 5000) * 0.10;
			commission += 5000 * 0.08;
		}
		else if(salesAmount  > 0 && salesAmount < 5000)
		{
			commission += salesAmount * 0.08;
		}
		return (salesAmount);
	}
	
	public static void Commission_calculator(double Commission_desired) 
	{
		double salesAmount, commission,	balance;					
		salesAmount = 0;					
		do {	
			balance = 0;
			commission = 0;	
			salesAmount += 0.01;

			if (salesAmount > 10000)
				commission += (balance = salesAmount - 10000) * 0.12;

			// If sales amount is $5,000.01-$10,000 commission rate is 10%
			if (salesAmount > 5000)
				commission += (balance -= balance - 5000) * 0.10;

			// If sales amount is $0.01-$5,000 commission rate is 8%
			if (salesAmount > 0)
				commission += balance * 0.08;

			// While commission is less than commission sought loop
		} while (commission < Commission_desired);

		// Display results
		System.out.printf("Minimum sales to earn $30,000: $%.0f\n", salesAmount);
	}

}
