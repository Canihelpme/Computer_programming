		System.out.println("Enter the amount of sales: ");
		double salesAmount = input.nextDouble();
		computeCommission(salesAmount);
	}
	
	public static double computeCommission(double salesAmount)
	{
		
		return ();
	}
	public static void Commission_calculator(String[] args) {
		final double Commission_desired = 30000; 
		double salesAmount, commission,	balance;					
		salesAmount = 0;					
		do {	
			balance = 0;
			commission = 0;	
			salesAmount += 0.01;

			if (salesAmount > 10000)
				commission += (balance = salesAmount - 10000) * 0.12;

			// If sales amount is $5,000.01-$10,000 commission rate is 10%
			if (salesAmount > 5000)
				commission += (balance -= balance - 5000) * 0.10;

			// If sales amount is $0.01-$5,000 commission rate is 8%
			if (salesAmount > 0)
				commission += balance * 0.08;

			// While commission is less than commission sought loop
		} while (commission < Commission_desired);

		// Display results
		System.out.printf("Minimum sales to earn $30,000: $%.0f\n", salesAmount);
	}

}
